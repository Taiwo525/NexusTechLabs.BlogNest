@model List<BlogNest.Models.Post>

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">BlogNest - The Dev Blog</h1>
            <p class="lead">
                BlogNest is a coding blog that cover a vast rang of topic like c#, 
                asp.net, html, css and more.
                Want to read the latest articles? join BlogNest app today and get
                weekly newsletter in your mail.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/7988086/pexels-photo-7988086.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="The Dev Blog"
                 class="d-block mx-lg-auto img-fluid" width="300"  />
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Any())
            {
                foreach (var post in Model)
                {
                    <div class="bg-light box-shadow mb-5 mt-5" >
                        <img src="@post.FeaturedImageUrl" alt="@post.Heading" class="img-fluid mb-2 d-block" />
                    </div>
                    <h2 class="mb-2">@post.Heading</h2>
                    <p class="mb-2">Author: @post.Author
                        <br/>
                        Published date: @post.PublishedDate.ToShortDateString()
                    </p>
                    <p class="mb-4">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                    </p>
                    <p class="mb-4">@post.ShortDescription</p>
                    <a class="btn btn-dark" 
                    asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@post.UrlHandle">Read More</a>
                }
            }
        </div>
    </div>
</div>