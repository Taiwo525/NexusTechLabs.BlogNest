@model BlogNest.Models.Account.RegisterViewModel

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Register
            </h1>
            <form asp-action="Register" method="post">
            <div class="mb-3 ">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" type="text" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3 ">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" type="text" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3 ">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="text" class="form-control" id="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 ">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="text" class="form-control" id="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 ">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="text" class="form-control" id="confirmpassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
            </form>
        </div>
    </div>

</div>
